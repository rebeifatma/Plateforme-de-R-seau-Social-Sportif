{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <section class="articles">
        {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">
                    Écrit le {{ article.getCreateAt()|date('d/m/Y') }} à {{ article.getCreateAt()|date('H:i') }} dans la catégorie  {{article.category.title}}
                </div>
                <div class="content">
                    <img src="{{ article.image }}" alt="{{ article.title }}" style="width: 360px !important; height: 200px !important;">
                    {{ article.content | raw }}
                    <a href="{{ path('blog_show', {'id': article.getId()}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}
